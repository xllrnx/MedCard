<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>
<AnchorPane prefHeight="350.0" prefWidth="400.0" styleClass="add_patient_container"
            stylesheets="@../../../../Styles/Doctor/RecordsWindowsStyles/DoctorAddPatient.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.medcard.Controllers.Doctor.RecordControllers.Patient.AddPatientController">
    <VBox alignment="CENTER" layoutX="9.0" layoutY="3.0" prefHeight="350.0" prefWidth="400.0" spacing="25.0"
          AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
          AnchorPane.topAnchor="0.0">
        <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="main_text" text="Додати нового пацієнта"/>
        <VBox prefHeight="263.0" prefWidth="370.0" spacing="10.0">
            <VBox alignment="CENTER_LEFT" prefHeight="182.0" prefWidth="382.0" spacing="15.0">
                <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="370.0" spacing="10.0">
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="Прізвище:"
                          wrappingWidth="105.0"/>
                    <TextField fx:id="surname_field" prefHeight="45.0" prefWidth="225.0" promptText="Прізвище"
                               styleClass="input_field"/>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="370.0" spacing="10.0">
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="Ім'я:" wrappingWidth="105.0"/>
                    <TextField fx:id="name_field" prefHeight="26.0" prefWidth="225.0" promptText="Ім'я"
                               styleClass="input_field"/>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="370.0" spacing="10.0">
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="По-батькові:"
                          wrappingWidth="105.0"/>
                    <TextField fx:id="fathername_field" prefHeight="26.0" prefWidth="225.0" promptText="По-батькові"
                               styleClass="input_field"/>
                </HBox>
                <HBox alignment="CENTER_LEFT" prefHeight="30.0" prefWidth="370.0" spacing="10.0">
                    <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="Дата народження:"
                          wrappingWidth="150.0"/>
                    <DatePicker fx:id="date_of_birth_field" promptText="Дата народження" styleClass="datefield"/>
                </HBox>
            </VBox>
            <VBox alignment="CENTER_LEFT" prefHeight="65.0" prefWidth="370.0" spacing="5.0">
                <TextFlow prefHeight="15.0" prefWidth="370.0">
                    <Text fx:id="error_text" fill="#ff6961" strokeType="OUTSIDE" strokeWidth="0.0"
                          styleClass="error_text" wrappingWidth="1.0"/>
                </TextFlow>
                <HBox alignment="CENTER" prefHeight="45.0" prefWidth="370.0" spacing="10.0">
                    <Button fx:id="cancel_button" mnemonicParsing="false" prefHeight="35.0" prefWidth="120.0"
                            styleClass="cancel_button" text="Скасувати"/>
                    <Button fx:id="confirm_button" mnemonicParsing="false" prefHeight="35.0" prefWidth="120.0"
                            styleClass="confirm_button" text="Підтвердити"/>
                </HBox>
            </VBox>
        </VBox>
    </VBox>
    <padding>
        <Insets bottom="15.0" left="15.0" right="15.0" top="15.0"/>
    </padding>
</AnchorPane>

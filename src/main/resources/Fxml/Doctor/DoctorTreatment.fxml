<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<AnchorPane prefHeight="600.0" prefWidth="850.0"
            styleClass="select_patient_container" stylesheets="@../../Styles/Doctor/DashboardStyles/DoctorSelectPatient.css"
            xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.medcard.Controllers.Doctor.DashboardsControllers.DoctorTreatmentController">
   <VBox spacing="15.0" AnchorPane.bottomAnchor="20.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0"
         AnchorPane.topAnchor="20.0">
      <HBox alignment="CENTER" prefHeight="27.0" prefWidth="810.0" spacing="5.0" styleClass="selected_patient">
         <padding>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </padding>
         <TextFlow prefHeight="26.0" prefWidth="359.0">
            <Text fx:id="selected_patient_info" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text"
                  text="Обраний пацієнт:" wrappingWidth="166.0"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text=" " wrappingWidth="100"/>
            <Text fx:id="selected_patient_surname" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text"
                  text="Прізвище" wrappingWidth="85"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text=" " wrappingWidth="100"/>
            <Text fx:id="selected_patient_name" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text="Ім'я"
                  wrappingWidth="40"/>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text" text=" " wrappingWidth="100"/>
            <Text fx:id="selected_patient_fathername" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text"
                  text="По-батькові" wrappingWidth="100"/>
         </TextFlow>
      </HBox>
      <ListView fx:id="treatment_listview" prefHeight="515.0" prefWidth="810.0">
         <VBox.margin>
            <Insets/>
         </VBox.margin>
         <padding>
            <Insets bottom="7.0" left="7.0" right="7.0" top="7.0"/>
         </padding>
      </ListView>
   </VBox>
</AnchorPane>
